@model  App.Web.Models.EMCS.CiplModel
@{
    ViewBag.Title = "Commercial Invoice Packing List View";
    ViewBag.Page = "cipl";
    ViewBag.Id = Model.Data.Id.ToString();
    ViewBag.IdReq = Model.Data.Id;
    ViewBag.IdStep = Model.DataRequest.IdStep;
    ViewBag.TypeReq = "Cipl";
    Layout = "~/Views/EMCS/_Layout.cshtml";
    
}


@Styles.Render("~/Content/EMCS/Custom.css")
@Styles.Render("~/Content/EMCS/Wizard/WizardPoint.css")
@Styles.Render("~/Content/EMCS/dropzone.css")
@Styles.Render("~/Content/EMCS/SweetAlert/sweetalert2.min.css")

<style>
    .input-group-addon {
        width: 50px;
        background: #00C0EF;
        border-color: #00ACD6;
        color: white;
        display: flex;
        justify-content: space-around;
        align-items: center;
        border-radius: 0px 0.4285rem 0.4285rem 0px;
    }
    .tabs {
        font-size: 15px;
        padding: 0px;
        list-style: none;
        background: #fff;
        box-shadow: 0px 5px 20px rgba(0,0,0,0.1);
        display: inline-block;
        border-radius: 50px;
        position: relative;
    }

    .tabs a {
        text-decoration: none;
        color: #777;
        padding: 10px 20px;
        display: inline-block;
        position: relative;
        z-index: 1;
        transition-duration: 0.6s;
    }

    .tabs a.active {
        color: #fff;
    }

    .tabs a i {
        margin-right: 5px;
    }

        .tabs .selector {
            height: 100%;
            display: inline-block;
            position: absolute;
            left: 0px;
            top: 0px;
            z-index: 1;
            border-radius: 50px;
            transition-duration: 0.6s;
            transition-timing-function: cubic-bezier(0.68, -0.55, 0.265, 1.55);
            background: #05abe0;
            background: -moz-linear-gradient(45deg, #05abe0 0%, #8200f4 100%);
            background: -webkit-linear-gradient(45deg, #05abe0 0%,#8200f4 100%);
            background: linear-gradient(20deg, #fe9d01 60%,#FFD38A 83%);
            box-shadow: 4px -4px #a8a8a8;
        }
</style>

<div class="col-md-12">
    <div class="col-md-12">
        @Html.Partial("~/Views/EMCS/Wizard.cshtml")
    </div>
    <div class="col-md-12 mt-5">
        <div class="tab" role="tabpanel" style="box-shadow:none !important;background:none;">
            <!-- Nav tabs -->
            <nav class="tabs mb-4">
                <div class="selector"></div>
                @if (!ViewBag.GroupName.Contains("CKB"))
                {
                    <a href="#invoice" class="active" aria-controls="home" role="tab" data-toggle="tab">Detail</a>
                    <a href="#history" aria-controls="profile" role="tab" data-toggle="tab" style="z-index:9;">History</a>
                    <a href="#problemhistory" aria-controls="profile" role="tab" data-toggle="tab" style="z-index:8;">Problem</a>
                    <a href="#documents" aria-controls="profile" role="tab" data-toggle="tab" style="z-index:7;">Documents</a>
                    <a href="#edipreview" aria-controls="profile" role="tab" data-toggle="tab" style="z-index:6;">EDI Preview</a>
                    <a href="#inpreview" aria-controls="profile" role="tab" data-toggle="tab" style="z-index:5;">Invoice Preview</a>
                    <a href="#plpreview" aria-controls="profile" role="tab" data-toggle="tab" style="z-index:4;">PL Preview</a>
                    <a href="#uploaddoc" class="hidden" aria-controls="messages" role="tab" data-toggle="tab" style="z-index:3;">Upload Documents</a>
                }
                else
                {

                    if (ViewBag.StepCargoId != 10020 && ViewBag.FlowCargoId == 4)
                    {
                        <a href="#invoice" class="active" aria-controls="home" role="tab" data-toggle="tab">Detail</a>
                        <a href="#history" aria-controls="profile" role="tab" data-toggle="tab" style="z-index:9;">History</a>
                        <a href="#problemhistory" aria-controls="profile" role="tab" data-toggle="tab" style="z-index:8;">Problem</a>
                        <a href="#documents" aria-controls="profile" role="tab" data-toggle="tab" style="z-index:7;">Documents</a>
                        <a href="#edipreview" aria-controls="profile" role="tab" data-toggle="tab" style="z-index:6;">EDI Preview</a>
                        <a href="#inpreview" aria-controls="profile" role="tab" data-toggle="tab" style="z-index:5;">Invoice Preview</a>
                        <a href="#plpreview" aria-controls="profile" role="tab" data-toggle="tab" style="z-index:4;">PL Preview</a>
                        <a href="#uploaddoc" class="hidden" aria-controls="messages" role="tab" data-toggle="tab" style="z-index:3;">Upload Documents</a>

                    }
                    else if (ViewBag.StepCargoId != 10020)
                    {
                        <a href="#edipreview" class="active" aria-controls="profile" role="tab" data-toggle="tab" style="z-index:6;">EDI Preview</a>

                    }
                    else
                    {
                        if (ViewBag.StepCargoId == 10020)
                        {
                            <a href="#invoice" class="active" aria-controls="home" role="tab" data-toggle="tab">Detail</a>
                            <a href="#edipreview" aria-controls="profile" role="tab" data-toggle="tab" style="z-index:6;">EDI Preview</a>

                        }
                    }
                }
            </nav>
            <!-- Tab panes -->
            <div class="tab-content tabs-custom">
                @if (!ViewBag.GroupName.Contains("CKB"))
                {
                    <div role="tabpanel" class="tab-pane active" id="invoice">
                        @Html.Partial("CiplTabInvoice", Model)
                    </div>

                    <div role="tabpanel" class="tab-pane" id="history">
                        @Html.Partial("CiplTabHistory")
                    </div>

                    <div role="tabpanel" class="tab-pane" id="problemhistory">
                        @Html.Partial("CiplTabProblemHistory")
                    </div>

                    <div role="tabpanel" class="tab-pane" id="documents">
                        @Html.Partial("CiplTabDocuments")
                    </div>

                    <div role="tabpanel" class="tab-pane" id="edipreview">
                        @Html.Partial("CiplTabEditPreview")
                    </div>

                    <div role="tabpanel" class="tab-pane" id="inpreview">
                        @Html.Partial("CiplTabInPreview")
                    </div>

                    <div role="tabpanel" class="tab-pane" id="plpreview">
                        @Html.Partial("CiplTabPlPreview")
                    </div>

                    <div role="tabpanel" class="tab-pane" id="uploaddoc">
                        @Html.Partial("CiplTabUploadDoc")
                    </div>
                }
                else if (ViewBag.StepCargoId != 10020)
                {
                    <div role="tabpanel" class="tab-pane active" id="edipreview">
                        @Html.Partial("CiplTabEditPreview")
                    </div>
                }
                else
                {
                    if (ViewBag.StepCargoId != 10020 && ViewBag.FlowCargoId == 4)
                    {
                        <div role="tabpanel" class="tab-pane active" id="invoice">
                            @Html.Partial("CiplTabInvoice", Model)
                        </div>

                        <div role="tabpanel" class="tab-pane" id="history">
                            @Html.Partial("CiplTabHistory")
                        </div>

                        <div role="tabpanel" class="tab-pane" id="problemhistory">
                            @Html.Partial("CiplTabProblemHistory")
                        </div>

                        <div role="tabpanel" class="tab-pane" id="documents">
                            @Html.Partial("CiplTabDocuments")
                        </div>

                        <div role="tabpanel" class="tab-pane" id="edipreview">
                            @Html.Partial("CiplTabEditPreview")
                        </div>

                        <div role="tabpanel" class="tab-pane" id="inpreview">
                            @Html.Partial("CiplTabInPreview")
                        </div>

                        <div role="tabpanel" class="tab-pane" id="plpreview">
                            @Html.Partial("CiplTabPlPreview")
                        </div>

                        <div role="tabpanel" class="tab-pane" id="uploaddoc">
                            @Html.Partial("CiplTabUploadDoc")
                        </div>

                    }
                    else
                    {
                        if (ViewBag.StepCargoId == 10020)
                        {
                            <div role="tabpanel" class="tab-pane active" id="invoice">
                                @Html.Partial("CiplTabInvoice", Model)
                            </div>

                            <div role="tabpanel" class="tab-pane" id="edipreview">
                                @Html.Partial("CiplTabEditPreview")
                            </div>
                        }
                    }

                }
            </div>
            <div class="row">
                <div class="col-md-12 text-right" style="margin-top:20px;">
                    <a href="~/EMCS/CiplList" class="btn btn-warning btn-round">
                        <i class="fa fa-chevron-circle-left"></i>&nbsp;Back
                    </a>
                    @if (Model.Data.CreateBy.ToLower() == User.Identity.Name.ToLower())
                    {
                        <button type="button" class="btn btn-warning btn-sm" id="btnRevise" style="min-width:120px;"><i class="fa fa-edit"></i> Request Revise</button>
                        if (Model.DataRequest.IdStep == 10016 || Model.DataRequest.IdStep == 10023 || Model.DataRequest.IdStep == 10026)
                        {
                            <button type="button" class="btn btn-warning btn-sm" id="btnDelegation" style="min-width:120px;"><i class="fa fa-paper-plane"></i> Delegation</button>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

