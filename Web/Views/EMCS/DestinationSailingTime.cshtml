
@{
    Layout = "~/Views/EMCS/_Layout.cshtml";
    ViewBag.Title = "Destination Country List & Sailing Time";
}
<style>
    .tableFixHead thead {
        position: sticky;
        top: 0;
    }
</style>

<div class="row">
    <div class="col-md-12">
        <div class="box">
            <div class="box-body">
                <div class="form-horizontal">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="col-md-4 pull-right">
                                <div class="form-group">
                                    <label class="col-md-3">Destination</label>
                                    <div class="col-md-12">
                                        <div class="">
                                            <div>
                                                <select class="select2" id="destination" name="destination" style="width:100% !important;" required></select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="col-md-4 pull-right">
                                <div class="form-group">
                                    <label class="col-md-3" style="text-align: left;">Origin</label>
                                    <div class="col-md-12">
                                        <div class="">
                                            <div>
                                                <select class="select2" id="origin" name="origin" style="width:100% !important;" required></select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="col-md-4 pull-right">
                                <div class="form-group text-right">
                                    <button class="btn btn-warning animation-on-hover btn-round" onclick="searchDataReport()" style="background:#fe9d01;"><i class="fa fa-search"></i> Show Report</button>
                                    <button class="btn btn-success animation-on-hover btn-round" onclick="exportDataReport()" style=""><i class="fa fa-file"></i> Export To Excel</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <table class="table table-bordered table-striped tableFixHead" id="tbl-destination-sailing"></table>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="@Url.Content("~/Scripts.app/EMCS/report/DestinationSailingTime.cshtml.js")"></script>
    <script src="@Url.Content("~/Scripts.app/EMCS/Custom.js")"></script>
}